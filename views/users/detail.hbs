<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-md-6 col-12 mb-2">
                <h3 class="content-header-title">التفاصيل </h3>
                <div class="row breadcrumbs-top">
                    <div class="breadcrumb-wrapper col-12">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/admin">الرئيسية</a>
                            </li>
                            <li class="breadcrumb-item active"> التفاصيل
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-detached content-right">
            <div class="content-body">
                <!-- DOM - jQuery events table -->
                <section class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-head">
                                <div class="card-header">
                                    <h4 class="card-title">الطلبات</h4>
                                    <a class="heading-elements-toggle"><i
                                            class="la la-ellipsis-h font-medium-3"></i></a>
                                </div>
                            </div>
                            <div class="card-content">
                                <div class="card-body">
                                    <!-- Task List table -->
                                    <div class="table-responsive">
                                        <table id="users-contacts"
                                               class="table table-striped table-bordered zero-configuration">
                                            <thead>
                                            <tr>
                                                <th>id</th>
                                                <th>اسم الشحنة</th>
                                                <th>الحالة</th>
                                                <th>السعر</th>
                                                <th>الوزن</th>
                                                <th>اسم المستلم</th>
                                                <th>هاتف المستلم</th>
                                                <th>ملاحظات</th>
                                                <th>العنوان</th>
                                                <th>التاريخ</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {{#each orders as |order|}}
                                                <tr>
                                                    <td>
                                                        {{order._id}}
                                                    </td>
                                                    <td>
                                                        {{order.name}}
                                                    </td>
                                                    <td class="text-center">
                                                        {{order.status}}
                                                    </td>
                                                    <td class="text-center">
                                                        {{order.price}}
                                                    </td>
                                                    </td>
                                                    <td class="text-center">
                                                        {{order.weight}}
                                                    </td>
                                                    <td> {{order.username}}</td>
                                                    <td dir="ltr"> {{order.userphone}}</td>
                                                    <td>{{order.usernotes}}</td>
                                                    <td>{{order.address}}</td>
                                                    <td>{{order.createdAt}}</td>
                                                </tr>
                                            {{/each}}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="col-12">
                        <div class="card">
                            <div class="card-head">
                                <div class="card-header">
                                    <h4 class="card-title">الفواتير</h4>
                                    <a class="heading-elements-toggle"><i
                                            class="la la-ellipsis-h font-medium-3"></i></a>
                                </div>
                            </div>
                            <div class="card-content">
                                <div class="card-body">
                                    <!-- Task List table -->
                                    <div class="table-responsive">
                                        <table id="users-contacts"
                                               class="table table-white-space table-bordered row-grouping display no-wrap icheck table-middle">
                                            <thead>
                                            <tr>
                                                <th>رقم الطلب</th>
                                                <th> اسم الشحنة</th>
                                                <th>المبلغ</th>
                                                <th>التاريخ</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {{#each orders as |order|}}
                                                <tr>
                                                    <td>{{order._id}}</td>
                                                    <td>{{order.name}}</td>
                                                    <td>{{order.price}}</td>
                                                    <td>{{order.createdAt}}</td>
                                                </tr>
                                            {{/each}}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
        <div class="sidebar-detached sidebar-left" ,=",">
            <div class="sidebar">
                <div class="bug-list-sidebar-content">
                    <!-- Predefined Views -->
                    <div class="card">
                        <div class="card-head">
                            <div class="media p-1">
                                <div class="media-left pr-1">
                    <span class="avatar avatar-sm avatar-online rounded-circle">
                      <img src="/Adminlook/images/logo/logo.png" alt="avatar"><i></i></span>
                                </div>
                                <div class="media-body media-middle">
                                    <h5 class="media-heading">{{user.name}}</h5>
                                </div>
                            </div>
                        </div>
                        <!-- contacts view -->
                        <div class="card-body">
                            <div class="list-group">
                                <a href="#" class="list-group-item active">عدد الطلبات ({{orders.length}})</a>
                            </div>
                            <div class="list-group"><br>
                                {{#if user.image}}
                                    <a data-toggle="modal" data-target="#exampleModal1"><img
                                            src="https://sataex.com/{{user.image}}"
                                            style="width:200px;height:100px"></a><br>

                                    <!-- Modal -->
                                    <div class="modal fade" id="exampleModal1" tabindex="-1" role="dialog"
                                         aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                </div>
                                                <div class="modal-body">
                                                    <img class="container" src="https://sataex.com/{{user.image}}">
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary"
                                                            data-dismiss="modal">اغلاق
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {{/if}}
                                {{#if user.image1}}
                                    <a data-toggle="modal" data-target="#exampleModal2"><img
                                            src="https://sataex.com/{{user.image1}}"
                                            style="width:200px;height:100px"></a><br>

                                    <!-- Modal -->
                                    <div class="modal fade" id="exampleModal2" tabindex="-1" role="dialog"
                                         aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                </div>
                                                <div class="modal-body">
                                                    <img class="container" src="https://sataex.com/{{user.image1}}">
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary"
                                                            data-dismiss="modal">اغلاق
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {{/if}}
                                {{#if user.image2}}
                                    <a data-toggle="modal" data-target="#exampleModal3"><img
                                            src="https://sataex.com/{{user.image2}}"
                                            style="width:200px;height:100px"></a><br>

                                    <!-- Modal -->
                                    <div class="modal fade" id="exampleModal3" tabindex="-1" role="dialog"
                                         aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                </div>
                                                <div class="modal-body">
                                                    <img class="container" src="https://sataex.com/{{user.image2}}">
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary"
                                                            data-dismiss="modal">اغلاق
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {{/if}}

                            </div>
                        </div>
                        {{#if type}}
                            المحفظة (-{{user.wallet}})
                            <a href="/admin/users/payed/{{user._id}}"
                               class="btn btn-outline-info btn-sm box-shadow-3 mr-1 mb-1">تصفية الحساب</a>
                        {{/if}}
                    </div>
                    <!--/ Predefined Views -->
                </div>
            </div>
        </div>
    </div>
</div>