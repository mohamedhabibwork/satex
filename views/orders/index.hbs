<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-md-6 col-12 mb-2">
                <h3 class="content-header-title">الطلبات </h3>
                <div class="row breadcrumbs-top">
                    <div class="breadcrumb-wrapper col-12">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/admin">الرئيسية</a>
                            </li>
                            <li class="breadcrumb-item active"> الطلبات
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">
            <!-- DOM - jQuery events table -->
            <section id="dom">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">الطلبات </h4>
                                <a class="heading-elements-toggle"><i
                                        class="la la-ellipsis-v font-medium-3"></i></a>
                                <div class="heading-elements">
                                    <ul class="list-inline mb-0">
                                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                        <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                        <li><a data-action="close"><i class="ft-x"></i></a></li>
                                    </ul>
                                </div>
                            </div>

                            {{!-- error or success --}}

                            <div class="card-content collapse show">
                                <div class="card-body card-dashboard">
                                    <form action="/admin/orders" method="GET">
                                        <div class="row">
                                            <div class="form-group col-md-6">
                                                <label for="projectinput1"> حالات الطلب </label>
                                                <select class="form-control" name="status" required>
                                                    <option value="" selected>اختر حالة الطلب</option>
                                                    <option value="pendingdelevery">معلق</option>
                                                    <option value="donereceive">تحت التنفيذ</option>
                                                    <option value="finished">منتهي</option>
                                                    <option value="refused">ملغي</option>
                                                </select>
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="projectinput1">بحث</label>
                                                <input type="submit" class="form-control" value="بحث">
                                            </div>
                                        </div>
                                    </form>
                                    <table
                                            class="table table-striped table-bordered scroll-horizontal">{{--scroll-horizontal--}}
                                        <thead class="">
                                        <tr>
                                            <th>#ID</th>
                                            <th>اسم العميل</th>
                                            <th>هاتف العميل</th>
                                            <th>ايميل العميل</th>
                                            <th>عنوان العميل</th>
                                            <th>اسم المندوب</th>
                                            <th>هاتف المندوب</th>
                                            <th>حالة الطلب</th>
                                            <th>السعر</th>
                                            <th>اتخاذ اجراء</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {{#each orders}}
                                            <tr>
                                                <td>{{this._id}}</td>
                                                <td>{{this.username}}</td>
                                                <td>{{this.userphone}}</td>
                                                <td>{{this.useremail}}</td>
                                                <td>{{this.address}}</td>
                                                <td>{{#if delvery}}
                                                    {{this.delvery.name}}
                                                {{else}}
                                                    لايوجد
                                                {{/if}}</td>
                                                <td>{{#if delvery}}
                                                    {{this.delvery.phone}}
                                                {{else}}
                                                    لايوجد
                                                {{/if}}</td>
                                                <td>{{this.statusar}}</td>
                                                <td>{{this.price}}</td>
                                                <td>
                                                    <div class="btn-group" role="group"
                                                         aria-label="Basic example">
                                                        <a href="/admin/orders/detail/{{this._id}}"
                                                           class="btn btn-outline-primary btn-sm box-shadow-3 mr-1 mb-1">تفاصيل</a>

                                                        {{#if this.delvery}}
                                                            {{#if this.isfinish}}
                                                            {{else}}
                                                                <a href="/admin/orders/finish/{{this._id}}"
                                                                   class="btn btn-outline-danger btn-sm box-shadow-3 mr-1 mb-1">انهاء
                                                                    الطلب</a>
                                                            {{/if}}
                                                        {{/if}}


                                                    </div>
                                                </td>
                                            </tr>
                                        {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
{{#if success}}
    <script>
        Swal.fire({
            position: 'top-end',
            icon: 'success',
            title: 'تمت العملية بنجاح',
            showConfirmButton: false,
            timer: 1500
        })
    </script>
{{/if}} 