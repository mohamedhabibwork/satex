<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-md-6 col-12 mb-2">
                <h3 class="content-header-title">الطلبات بانتظار رد مندوب </h3>
                <div class="row breadcrumbs-top">
                    <div class="breadcrumb-wrapper col-12">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/admin">الرئيسية</a>
                            </li>
                            <li class="breadcrumb-item active"> الطلبات بانتظار رد مندوب
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">
            <!-- DOM - jQuery events table -->
            <section id="dom">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title"> الطلبات بانتظار رد مندوب </h4>
                                <a class="heading-elements-toggle"><i
                                        class="la la-ellipsis-v font-medium-3"></i></a>
                                <div class="heading-elements">
                                    <ul class="list-inline mb-0">
                                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                        <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                        <li><a data-action="close"><i class="ft-x"></i></a></li>
                                    </ul>
                                </div>
                            </div>

                            {{!-- error or success --}}

                            <div class="card-content collapse show">
                                <div class="card-body card-dashboard">
                                    <table
                                            class="table table-striped table-bordered scroll-horizontal">{{--scroll-horizontal--}}
                                        <thead class="">
                                        <tr>
                                            <th>#ID</th>
                                            <th>اسم العميل</th>
                                            <th>هاتف العميل</th>
                                            <th>ايميل العميل</th>
                                            <th>عنوان العميل</th>
                                            <th>السعر</th>
                                            <th>الاكشن</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {{#each orders}}
                                            <tr>
                                                <td>{{this._id}}</td>
                                                <td>{{this.username}}</td>
                                                <td>{{this.userphone}}</td>
                                                <td>{{this.useremail}}</td>
                                                <td>{{this.address}}</td>
                                                <td>{{this.price}}</td>
                                                <td>
                                                    <div class="btn-group" role="group"
                                                         aria-label="Basic example">
                                                        <a href="/admin/orders/detail/{{this._id}}"
                                                           class="btn btn-outline-primary btn-min-width box-shadow-3 mr-1 mb-1">تفاصيل</a>
                                                    </div>
                                                </td>
                                            </tr>
                                        {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>